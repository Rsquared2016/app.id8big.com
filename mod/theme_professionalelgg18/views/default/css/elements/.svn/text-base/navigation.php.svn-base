/**
 * Navigation
 *
 * @package Elgg.Core
 * @subpackage UI
 */
?>
/* BREADCRUMBS */
.elgg-breadcrumbs li a {
    color: <?php echo $vars['css']['base-link-color']; ?>;
    display: inline;
}
.elgg-breadcrumbs > li:after {
	content: "\003E";
}
.elgg-main .elgg-breadcrumbs {
	position: relative;
	text-overflow: ellipsis;
	-o-text-overflow: ellipsis;
	-webkit-text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
	width: 85%;
}
/* TOPBAR MENU */
.elgg-menu-topbar > li > a:hover {
	text-decoration: underline;
}
.elgg-menu-topbar .elgg-icon {
	vertical-align: middle;
	margin-top: -1px;
}
.elgg-menu-topbar.elgg-menu-topbar-alt .elgg-icon {
    display: none;
}
.elgg-menu-topbar > .elgg-menu-item-elgg-logo {
    display: none;
}
.elgg-menu-topbar > li > a.elgg-topbar-logo {
	width: 38px;
	height: 20px;
}
.elgg-menu-topbar > li > a.elgg-topbar-avatar {
	width: 18px;
	height: 18px;
}
.elgg-page-topbar .navbar-inner li.elgg-menu-item-friends a {
    padding-bottom: 13px;
    padding-top: 8px;
}
/* TITLE */
.elgg-menu-title {
	float: right;
}
.elgg-menu-title > li {
	display: inline-block;
	margin-left: 4px;
}
/* PAGE MENU */
.elgg-body ul.elgg-menu-page,
.elgg-body ul.elgg-menu-owner-block {
	margin-bottom: 15px;
    margin-left: 0;
    list-style: none;
}
.elgg-menu-page a {
	display: block;
	background: <?php echo $vars['css']['page-mn-background-color']; ?>;
	padding: <?php echo $vars['css']['page-mn-sel-item-height']; ?>;
}
.elgg-menu-page a:hover {
	background: <?php echo $vars['css']['page-mn-background-color-hover']; ?>;
	color: <?php echo $vars['css']['page-mn-font-color-hover']; ?>;
	text-decoration: none;
}
.elgg-menu-page li.elgg-state-selected > a {
	background-color: <?php echo $vars['css']['page-mn-sel-background-color']; ?>;
	color: <?php echo $vars['css']['page-mn-sel-font-color']; ?>;
}
.elgg-menu-page .elgg-child-menu {
	display: none;
	margin-left: 15px;
    list-style: none;
}
.elgg-menu-page .elgg-menu-closed:before,
.elgg-menu-opened:before {
	display: inline-block;
	padding-right: 4px;
}
.elgg-menu-page .elgg-menu-closed:before {
	content: "\002B";
}
.elgg-menu-page .elgg-menu-opened:before {
	content: "\002D";
}
/* SITE FOOTER */
.elgg-menu-footer > li,
.elgg-menu-footer > li > a {
	display: inline-block;
}
.elgg-menu-footer > li:after {
	content: "\007C";
	padding: 0 4px;
}
.elgg-menu-footer-default {
	float: right;
}
.elgg-menu-footer-alt {
	float: left;
}
/* GENERAL MENU */
.elgg-menu-general > li,
.elgg-menu-general > li > a {
	display: inline-block;
}
.elgg-menu-general > li:after {
	content: "\007C";
	padding: 0 4px;
}
/* ENTITY AND ANNOTATION */
.elgg-menu-entity,
.elgg-menu-annotation {
	float: right;
	font-size: 11px;
	color: <?php echo $vars['css']['base-light-text-color']; ?>;
	line-height: 13px;
}
.elgg-menu-entity > li,
.elgg-menu-annotation > li {
	margin-left: 8px;
}
.elgg-menu-entity > li > a,
.elgg-menu-annotation > li > a {
	display: block;
}
/* OWNER BLOCK */
.elgg-menu-owner-block li a {
	display: block;
	background: <?php echo $vars['css']['page-mn-background-color']; ?>;
	padding: <?php echo $vars['css']['page-mn-sel-item-height']; ?>;
}
.elgg-menu-owner-block li a:hover {
	background: none;
	color: <?php echo $vars['css']['base-link-color']; ?>;
	text-decoration: underline;
}
.elgg-menu-owner-block li.elgg-state-selected > a {
	background: <?php echo $vars['css']['page-mn-sel-background-color']; ?>;
	color: <?php echo $vars['css']['page-mn-sel-font-color']; ?>;
}
/* LONGTEXT */
.elgg-menu-longtext {
	float: right;
}
/* RIVER */
.elgg-river-item ul.elgg-menu-river {
	float: right;
	margin: -2px 0 0 10px;
	font-size: 11px;
	color: <?php echo $vars['css']['base-light-text-color']; ?>;
	line-height: 16px;
	height: 16px;
}
.elgg-menu-river > li {
	display: inline-block;
	margin-left: 5px;
}
.elgg-menu-river > li > a {
	height: 16px;
}
.elgg-menu-river > li > a {
	display: block;
}
.elgg-menu-river > li > span {
	vertical-align: baseline;
}
/* SIDEBAR EXTRAS (rss, bookmark, etc) */
.elgg-body ul.elgg-menu-extras {
	margin: 0 0 10px;
    list-style: none;
}
/* WIDGET MENU */
.elgg-menu-widget > li {
	position: absolute;
	top: 4px;
	display: inline-block;
	width: 18px;
	height: 18px;
	padding: 2px 2px 0 0;
}
.elgg-menu-widget > .elgg-menu-item-collapse {
	left: 5px;
}
.elgg-menu-widget > .elgg-menu-item-delete {
	right: 5px;
}
.elgg-menu-widget > .elgg-menu-item-settings {
	right: 25px;
}
