/* home CSS */
/* general */
.bodyHome .elgg-page-body {
	margin: 0;
    min-height: 0;
    padding: 0;
}
.bodyHome .elgg-page-default {
	background: url(<?php echo THEME_GRAPHICS_CUSTOM; ?>fon-page-container.png) repeat-x 0 60px #fff;
}
/* home text / image */
.homeTxtCont {
	height: 345px;
}
.homeTxt {
	width: 45.6565656566%;
	height: 100%;
}
.homeTxt table,
.homeTxt tr,
.homeTxt td {
	width: 100%;
	height: 100%;
	vertical-align: middle;
	border-collapse: collapse;
	border: none;
	padding: 0;
	margin: 0;
}
.homeTxt h2 {
	color: <?php echo $vars['css']['base-link-color']; ?>;
	font-size: 22px;
	line-height: 24px;
	font-weight: normal;
	margin: 0 0 15px;
}
.homeTxt p {
	color: #7b858a;
	font-size: 14px;
	line-height: 18px;
	margin: 0;
}
.homeImg {
	width: 50.5050505051%;
}
.homeImg img {
    max-width: 100%;
}
/* home contact */
.homeContactTxtCont {
	padding: 26px 0 0 0;
	height: 166px;
}
.homeContactTxt,
.homeContactInfo {
	padding: 6px 0;
}
.homeContactTxt {
	width: 62.6262626263%;
	background: url(<?php echo THEME_GRAPHICS_CUSTOM; ?>sep-txt-contact-home.png) 100% 0 repeat-y;
	padding-right: 2.0202020202%;
	margin: 0 2.0202020202% 0 0;
}
.homeContactTxt h3,
.homeContactInfo h3 {
	font-size: 13px;
	line-height: 15px;
	margin: 0 0 15px;
	font-weight: normal;
}
.homeContactTxt h3 .compName {
	text-transform: uppercase;
}
.homeContactTxt p,
.homeContactInfo li {
	font-size: 12px;
	line-height: 16px;
	margin: 0;
}
.homeContactInfo {
	width: 33.2323232323%;
}
.homeContactInfo ul {
	margin: 0;
	padding: 0;
	list-style: none;
}
.homeContactInfo li.subTitle {
	font-weight: bold;
	color: <?php echo $vars['css']['base-link-color']; ?>;
}
