/* slideshow */
.slideshow {
	margin: 0 auto;
}
.slideshow,
.slideshow .img {
	width: 627px;
	height: 336px;
}
.slideshow .img {
	position: absolute;
	top: 0;
	left: 0;
}
.slideshow .imgMask {
	background: url(<?php echo THEME_GRAPHICS_CUSTOM ?>slideshow/fon-black-ss.png) 0 0 repeat;
	height: 44px;
	bottom: 0;
	position: absolute;
	left: 0;
	z-index: 12;
	width: 100%;
}
.slideshow {
	position: relative;
	display: block;
	overflow: hidden;
}
.slideshow .img {
	overflow: hidden;
	z-index: 1;
	background: url(<?php echo THEME_GRAPHICS_CUSTOM ?>ajax-loader.gif) 50% 50% #fff no-repeat;
}
.slideshow .img img {
	width: 100%;
	height: 100%;
	display: block;
}
.slideshow ul.ssNavigator {
	bottom: 12px;
    height: 19px;
    list-style: none;
    margin: 0;
    padding: 0;
    position: absolute;
    right: 14px;
    width: 213px;
    z-index: 123;
}
.slideshow li.liImg {
	background: url(<?php echo THEME_GRAPHICS_CUSTOM ?>slideshow/bul-slideshow.png) 0 0 no-repeat;
	cursor: pointer;
    float: left;
    height: 9px;
    margin: 6px 19px 0 0;
    width: 9px;
}
.slideshow li.prev,
.slideshow li.next {
	float: left;
	height: 19px;
	width: 16px;
	cursor: pointer;
	background: url(<?php echo THEME_GRAPHICS_CUSTOM ?>slideshow/img-slideshow-arrow.png) 0 0 no-repeat;
}
.slideshow li.prev {
	background-position: 0 0;
	margin: 0 0 0 48px;
}
.slideshow li.prev:hover {
	background-position: 0 100%;
}
.slideshow li.next {
	background-position: 100% 0;
	margin: 0;
	float: right;
}
.slideshow li.next:hover {
	background-position: 100% 100%;
}
.slideshow li.on {
	background-position: 100% 0;
}
.slideshow li a {
	display: block;
	width: 100%;
	height: 100%;
	text-decoration: none;
	cursor: pointer;
}
.slideshow .txt {
	position: absolute;
	width: 321px;
	height: 18px;
	left: 17px;
	top: 306px;
	color: #fff;
	z-index: 123;
	display: none;
}
#txt1 {
	background: url(<?php echo THEME_GRAPHICS_CUSTOM ?>slideshow/img-txt-ss.png) 0 0 no-repeat;
}
#txt2 {
	background: url(<?php echo THEME_GRAPHICS_CUSTOM ?>slideshow/img-txt-ss.png) 0 0 no-repeat;
}
#txt3 {
	background: url(<?php echo THEME_GRAPHICS_CUSTOM ?>slideshow/img-txt-ss.png) 0 0 no-repeat;
}
#txt4 {
	background: url(<?php echo THEME_GRAPHICS_CUSTOM ?>slideshow/img-txt-ss.png) 0 0 no-repeat;
}
#txt5 {
	background: url(<?php echo THEME_GRAPHICS_CUSTOM ?>slideshow/img-txt-ss.png) 0 0 no-repeat;
}
.slideshow .txt.on {
	display: block!important;
}
.slideshow .txt h2 {
	font-size: 16px;
	line-height: 18px;
	font-weight: bold;
	margin: 0 0 3px 0;
}
.slideshow .txt p {
	font-size: 12px;
	line-height: 16px;
	margin: 0;
}