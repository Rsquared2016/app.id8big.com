<?php
/**
 * profile CSS
 */
?>
/* profile left block (details, avatar, etc.) */
.profile.elgg-col-2of3 {
    float: left;
    margin: 0;
    overflow: visible;
    position: relative;
    z-index: 123;
}
.profile.elgg-col-2of3,
#cols2and3 {	/* also columns 2 and 3 (widget columns) */
	width: 582px;
}
.profile .elgg-inner {
    border: none;
    margin: 0;
}
/* profile owner block */
#profile-owner-block {
    float: left;
    margin: 0;
    padding: 0;
}
.imgProfileContainer {
    margin: 0 0 18px;
    position: relative;
}
.imgProfileContainer .elgg-avatar.elgg-avatar-large {
    border: none;
    display: block;
    left: 0;
    position: absolute;
    top: 0;
    z-index: 1;
}
.elgg-avatar > a,
.elgg-avatar > a > img {
    display: block;
}
#profile-owner-block,
.imgProfileContainer,
.imgProfileContainer .elgg-avatar.elgg-avatar-large,
.elgg-avatar-large > a > img {
    width: 200px;
}
.imgProfileContainer,
.imgProfileContainer .elgg-avatar.elgg-avatar-large,
.elgg-avatar-large > a > img {
    height: 200px;
}
.imgProfileContainer .editProfileIcon {
    background: url(<?php echo THEME_GRAPHICS_CUSTOM; ?>fon-edit-avatar.png) repeat 0 0;
    display: none;
    height: 26px;
    position: absolute;
    right: 0;
    text-align: center;
    top: 0;
    width: 110px;
    z-index: 12;
}
.imgProfileContainer .editProfileIcon a {
    background: url(<?php echo THEME_GRAPHICS_CUSTOM; ?>img-edit-avatar.png) no-repeat 8px 6px;
    color: #fff;
    display: block;
    font-size: 11px;
    line-height: 25px;
    padding: 0 0 1px 13px;
    text-decoration: none;
}
.imgProfileContainer:hover .editProfileIcon,
.imgProfileContainer.hover .editProfileIcon {
    display: block;
}
/* profile left menu */
.elgg-menu.profile-content-menu li,
.mnProf p {
    font-size: 12px;
    line-height: 14px;
    margin: 0 0 6px;
}
.elgg-menu.profile-content-menu li a {
    background: none;
    display: inline;
    font-size: 11px;
    line-height: 13px;
    padding: 0;
}
/* profile details */
#profile-details {
    border-bottom: 1px solid <?php echo $vars['css']['base-border-color']; ?>;
    float: right;
    min-height: 277px;
    padding: 0;
    width: 370px;
}
#profileTitle {
	margin: 0 0 15px;
	padding: 3px 0 0;
	border-bottom: none;
}
#profile-details h2 {
    font-size: 20px;
    font-weight: bold;
    line-height: 22px;
    width: 70%;
    margin: 0;
    padding: 0;
}
#profileTitle a {
	margin: 0;
}
#profile-details .odd,
#profile-details .even,
.profile-aboutme-title {
    margin: 0 0 8px;
}
.profile-aboutme-contents {
    height: 50px;
    margin: 0 0 12px;
    overflow: hidden;
    position: relative;
    z-index: 1;
}
.profile-aboutme-contents p {
    margin: 0;
}
a#showMore {
    background: url(<?php echo THEME_GRAPHICS_CUSTOM; ?>fon-show-details.png) no-repeat 50% 6px #fff;
    display: none;
    bottom: 1px;
    right: 0;
    height: 16px;
    width: 16px;
    outline: medium none !important;
    position: absolute;
    text-decoration: none;
    z-index: 12;
    border: 1px solid <?php echo $vars['css']['base-border-color']; ?>;
}
a#showMore.itsOn {
    background-position: 50% -89px;
}
.profileAboutCont {
	position: relative;
}
/* hidden profile menu */
.mnProf p a.mnMore {
    background: url(<?php echo THEME_GRAPHICS_CUSTOM; ?>img-arrow-mn.png) no-repeat 100% 6px;
    padding: 0 12px 0 0;
    font-size: 11px;
    line-height: 13px;
    color: #880000;
}
.hiddenMnProfile {
    height: 1px;
    position: relative;
}
.elgg-main ul.mnProfSection {
    display: none;
    left: 0;
    list-style: none;
    margin: 0;
    position: absolute;
    top: 0;
}
/* widget columns */
#elgg-widget-col-1,
#elgg-widget-col-2,
#elgg-widget-col-3 {
    width: 285px;
}
#elgg-widget-col-2,
#elgg-widget-col-3 {
    padding: 22px 0 0;
}
#elgg-widget-col-3 {
    float: left;
}
#elgg-widget-col-2 {
    margin: 0 20px 0 0;
}
#cols2and3 #elgg-widget-col-2,
#cols2and3 #elgg-widget-col-3 {
	margin: 0;
}
/* check list */
body .ui-dropdownchecklist-text {
    font-size: 12px;
    color: #555;
    padding: 5px;
}
.ui-dropdownchecklist-selector {
    border: 1px solid <?php echo $vars['css']['base-border-color']; ?>;
    height: 25px;
}
.ui-dropdownchecklist-item {
    padding: 6px;
}
.ui-dropdownchecklist-item input[type="checkbox"] {
	display: inline;
	margin: 0 6px 0 0;
}
.ui-dropdownchecklist-item label {
	display: inline;
	font-size: 12px;
	line-height: 14px;
}
/* edit titles */
form div.rFrmEdit {
	margin-bottom: 20px;
}
.customFieldTitle {
	margin: 0 0 15px;
	padding: 0 0 5px;
	border-bottom: 1px solid <?php echo $vars['css']['base-border-color']; ?>;
}
.customFieldTitle label {
	font-weight: bold;
}
.customFieldTitle label,
.customFieldTitle span {
	margin: 0;
}
